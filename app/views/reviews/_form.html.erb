<%= form_with(model: review) do |form| %>
  <% if review.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :book_id, value: @book.id %>
  </div>

  <%# To pass the book_id param in URL %>

  <div class="field">
    <%= form.label :BookName, style: "display: block" %>
    <%= form.text_field :something, value: @book.name, :readonly => true %>
  </div>


  <div>
    <%= form.label :rating, style: "display: block" %>
    <%= form.select :rating, '1'..'5' %>
  </div>

  <div>
    <%= form.label :review, style: "display: block" %>
    <%= form.text_field :review %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
