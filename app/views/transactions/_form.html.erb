<%= form_with(model: transaction) do |form| %>
  <% if transaction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :quantity, style: "display: block" %>
    <%= form.text_field :quantity, value: @transaction.quantity, :readonly => true %>
  </div>

  <div class="field">
    <%= form.label :total_price, style: "display: block" %>
    <%= form.text_field :total_price, value: @transaction.total_price, :readonly => true %>
  </div>

  <div>
    <%= form.label :credit_card_number, style: "display: block" %>
    <%= form.number_field :credit_card_number, value: current_user.credit_card_number , :required => true %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address, value: current_user.address , :required => true %>
  </div>

  <div>
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.number_field :phone_number, value:current_user.phone_number , :required => true %>
  </div>

  <div class="actions">
    <%= form.submit "Complete purchase"%>
  </div>

<% end %>
